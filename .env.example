# Example environment variables for AI School Management
# Copy to `.env` and fill in real values before deploying

# Django settings
# Generate a long random SECRET_KEY for production. Example (locally):
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=replace-me-with-a-secure-key
# DEBUG should be False in production
DEBUG=False
# Comma-separated allowed hosts (include your domain and any load balancer IPs)
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Database (example Postgres URL)
DATABASE_URL=postgresql://ai_school_user:ai_school_password@db:5432/ai_school_db

# AI Services
OPENAI_API_KEY=
ELEVENLABS_API_KEY=

# Frontend
FRONTEND_URL=http://localhost:3000

# Security
# In production, set SECURE_SSL_REDIRECT=True and provide valid certificates to
# the reverse proxy (nginx) so Django enforces HTTPS. HSTS preload is enabled by
# default when SECURE_SSL_REDIRECT=True; validate before enabling site-wide.
SECURE_SSL_REDIRECT=False

# CORS (comma separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
